{% extends 'base.njk' %}

{% block content %}
<style>
    .form-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 20px;
    }

    .form-container textarea {
        width: 80%;
        height: 100px;
        margin-bottom: 10px;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #43a047;
        border-radius: 5px;
        background: #e8f5e9;
    }

    .form-container button {
        padding: 10px 20px;
        font-size: 16px;
        color: white;
        background-color: #43a047;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }
    .form-container button:hover {
        background-color: #388e3c;
    }
</style>

<h1 style="text-align: center; color: #218838;">Consulta SQL</h1>
<div class="form-container">
    <form method="POST" action="/query">
        <textarea name="sql" placeholder="Escribe tu consulta SQL aquÃ­..."></textarea>
        <button type="submit">Ejecutar Consulta</button>
    </form>
</div>
{% endblock %}